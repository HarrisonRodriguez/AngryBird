
@model AbQuestion 
<head>
    <style>
        .updateQuestionButton {
	box-shadow:inset 0px 39px 0px -24px #5DA4E3;
	background-color:#5da5e3;
	border:1px solid #8C8C8C;
	display:inline-block;
	cursor:pointer;
	color:#ffffff;
	font-family:Trebuchet MS;
	font-size:12px;
	font-weight:bold;
	padding:5px 12px;
	text-decoration:none;
	text-shadow:0px 1px 0px #000000;
        }
    .updateQuestionButton:hover {
	background-color:#5da4e3;
    }
    .updateQuestionButton:active {
	position:relative;
	top:1px;
    }
    body {
        background-color: grey;
    }

    .deleteQuestionButton {
	box-shadow:inset 0px 39px 0px -24px #5DA4E3;
	background-color:#5da5e3;
	border:1px solid #8C8C8C;
	display:inline-block;
	cursor:pointer;
	color:#ffffff;
	font-family:Trebuchet MS;
	font-size:12px;
	font-weight:bold;
	padding:5px 12px;
	text-decoration:none;
	text-shadow:0px 1px 0px #000000;
    }
    .deleteQuestionButton:hover {
	background-color:#5da4e3;
    }
    .deleteQuestionButton:active {
	position:relative;
	top:1px;
}

    </style>
</head>




<h3>Question</h3>

    <div style="display: block">

        <button type="button" class="updateQuestionButton" onclick="getLink()">Update Question</button>

    </div>

<table class="table">

    <tr>

        <th>Question ID</th>
        <th>Angry Bird Question</th>
        <th>Question Rating</th>
        <th>Category</th>

    </tr>

    <tr>

        <td>@Model.QuestionID</td>
        <td>@Model.AngryBirdQuestion</td>
        <td>@Model.RatingID</td>
        <td>@Model.Category</td>

    </tr>

</table>


<div style="display: block">
    @using (Html.BeginForm("DeleteQuestion", "Question", "Post"))
    {
        <input type="hidden" asp-for="QuestionID" value="@Model.QuestionID" />
        <input class="deleteQuestionButton" type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
    }
</div>


<script type="text/javascript">
    function getLink() {
        window.location="/Question/UpdateQuestion/@Model.QuestionID"
    }
</script>