@model AbQuestion

<h2>Update Question</h2>

@using (Html.BeginForm("UpdateQuestionToDatabase", "Question", "Post"))
{
           <input asp-for="QuestionID" type="hidden" value="@Model.QuestionID" />

           <label asp-for="AngryBirdQuestion" class="control-label">Angry Bird Question</label>

           <input type="text" name="AngryBirdQuestion" class="form-control" value="@Model.AngryBirdQuestion"/>

           <div class="form-group">
               <label for="">Select Question Category</label>

               <select class="form-control" name="CategoryID" value="">

                   @foreach (var cat in Model.Categories)
                   {
                       <option value="@cat.CategoryID">@cat.CategoryID @cat.Name</option>
                   }
               </select>
           </div>

           <div class="form-group">
               <label for="">Select Rating - 5 being the best</label>

               <select class="form-control" name="RatingID" value="">

                   
                 <option value="1">1</option>
                 <option value="2">2</option>
                 <option value="3">3</option>
                 <option value="4">4</option>
                 <option value="5">5</option>
           
                  
               </select>
           </div>


           <input type="submit" value="Update Question" class="btn btn-primary" />
           


}