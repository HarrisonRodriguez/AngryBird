<head>
    <style>
        .createQuestionButton {
	box-shadow:inset 0px 39px 0px -24px #5DA4E3;
	background-color:#5da5e3;
	border:1px solid #8C8C8C;
	display:inline-block;
	cursor:pointer;
	color:#ffffff;
	font-family:Trebuchet MS;
	font-size:12px;
	font-weight:bold;
	padding:5px 12px;
	text-decoration:none;
	text-shadow:0px 1px 0px #000000;
    }
        .createQuestionButton:hover {
	background-color:#5da4e3;
    }
        .createQuestionButton:active {
	position:relative;
	top:1px;
    }
    body {
        background-color: grey;
    }
        a {
    color: #000000;
    }
    </style>
</head>


@model List<AbQuestion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>True Coders</h3>

<div style="display: block">

    <button type="button" class="createQuestionButton" onclick="getCreate()">Create Question</button>
    
</div>

<table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
    <tr>
        <th class="th-sm">Angry Bird Question</th>
        <th class="th-sm">Rating</th>
        <th class="th-sm">Category</th>
    </tr>
        </thead>
    @foreach (AbQuestion angry in Model)
    {
        <tr>
            <td><a color="black" href=/Question/ViewQuestion/@angry.QuestionID >@angry.AngryBirdQuestion</a></td>
            <td>@angry.RatingID</td>
            <td>@angry.Category</td> 
        </tr>
    }

</table>

<script type="text/javascript">
    function getCreate() {
        window.location="/Question/InsertQuestion"
    }
</script>